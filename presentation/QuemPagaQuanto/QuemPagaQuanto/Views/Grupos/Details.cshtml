@model QuemPagaQuanto.Models.Grupo

@{
    ViewData["Title"] = "Detalhes do Grupo";
}

<div class="row justify-content-center">
    <div class="col-md-4 custom--form">
        <h1 class="custom--form-header">Detalhes</h1>
        <h4 class="custom--form-sub">Informações do grupo</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Usuario)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Usuario.Email)
            </dd>
        </dl>

        <div>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar Grupo</a>
        </div>
    </div>
</div>

<div class="col-md-12 text-center mt-4 custom--back-link">
    <a asp-action="Index">Voltar para listagem</a>
</div>