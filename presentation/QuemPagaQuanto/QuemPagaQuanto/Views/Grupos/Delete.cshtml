@model QuemPagaQuanto.Models.Grupo

@{
    ViewData["Title"] = "Apagar Grupo";
}

<div class="row justify-content-center">
    <div class="col-md-4 custom--form">
        <h1 class="custom--form-header">Apagar</h1>
        <h4 class="custom--form-sub">Tem certeza que deseja apagar esse grupo?</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Usuario)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Usuario.Email)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Apagar Grupo" class="btn btn-danger" />
        </form>
    </div>

    <div class="col-md-12 text-center mt-4 custom--back-link">
        <a asp-action="Index">Voltar para listagem</a>
    </div>
</div>
