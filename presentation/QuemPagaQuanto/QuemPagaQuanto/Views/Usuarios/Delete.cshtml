@model QuemPagaQuanto.Models.Usuario

@{
    ViewData["Title"] = "Apagar Usuário";
}

<h1>Apagar</h1>

<h3>Tem certeza que deseja apagar esse usuário?</h3>
<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Perfil)
        </dt>

        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Perfil)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Apagar Usuário" class="btn btn-danger" />

        <a asp-action="Index" class="m-2">Voltar para listagem</a>
    </form>
</div>
