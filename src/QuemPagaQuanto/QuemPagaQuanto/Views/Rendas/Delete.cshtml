@model QuemPagaQuanto.Models.Renda

@{
    ViewData["Title"] = "Apagar Renda";
}

<div class="row justify-content-center">
    <div class="col-md-4 custom--form">
        <h1 class="custom--form-header">Apagar</h1>
        <h4 class="custom--form-sub">Tem certeza que deseja apagar essa renda?</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Morador)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Morador.Nome)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Valor)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Valor)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.RendaFixa)
            </dt>
            <dd class="col-sm-8">
                @(Model.RendaFixa ? "Sim" : "Não")
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>
            <dd class="col-sm-8">
                @(Model.Descricao != null ? Html.DisplayFor(model => model.Descricao) : "-")
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Data)
            </dt>
            <dd class="col-sm-8">
                @(Model.Data != null ? Html.DisplayFor(model => model.Data) : "-")
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Apagar Renda" class="btn btn-danger" />
        </form>
    </div>

    <div class="col-md-12 text-center mt-4 custom--back-link">
        <a asp-action="Index">Voltar para listagem</a>
    </div>
</div>