@model IEnumerable<QuemPagaQuanto.Models.Grupo>

@{
    ViewData["Title"] = "Grupos";
}

<div class="custom--table-header">
    <h1>Grupos</h1>
    <a asp-action="Create" class="btn btn-success">Adicionar Grupos</a>
</div>

<div class="custom--form">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Usuario)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Relatorio" asp-route-id="@item.Id">@item.Nome</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Usuario.Nome)
                    </td>
                    <td class="custom--table-actions">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Detalhes</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Apagar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
