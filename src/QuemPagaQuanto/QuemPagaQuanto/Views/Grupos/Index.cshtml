@model IEnumerable<QuemPagaQuanto.Models.Grupo>

@{
    ViewData["Title"] = "Grupos";
}

<div class="custom--table-header">
    <h1>Grupos</h1>
    <a asp-action="Create" class="btn btn-success">Adicionar Grupos</a>
</div>

<div class="custom--form">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Usuario)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Relatorio" asp-route-id="@item.Id">@item.Nome</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Usuario.Nome)
                    </td>
                    <td class="custom--table-actions">
                        <div class="dropdown">
                            <a class="btn btn-light dropdown-toggle btn-sm" href="#" role="button" id="dropdownMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Ações
                            </a>

                            <div class="dropdown-menu" aria-labelledby="dropdownMenu">
                                <a asp-controller="Despesas" asp-action="Index" asp-route-grupoId="@item.Id" class="dropdown-item">Despesas</a>
                                <a asp-controller="Moradores" asp-action="Index" asp-route-grupoId="@item.Id" class="dropdown-item">Moradores</a>
                                
                                <a asp-action="Details" asp-route-id="@item.Id" class="dropdown-item">Detalhes</a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="dropdown-item">Editar</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="dropdown-item">Apagar</a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
