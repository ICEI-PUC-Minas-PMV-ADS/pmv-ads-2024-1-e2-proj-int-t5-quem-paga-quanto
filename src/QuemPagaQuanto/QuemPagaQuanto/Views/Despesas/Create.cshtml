@model QuemPagaQuanto.Models.Despesa

@{
    ViewData["Title"] = "Criar Despesa";
}

<div class="row justify-content-center">
    <div class="col-md-4 custom--form">
        <h1 class="custom--form-header">Criar despesa</h1>
        <h4 class="custom--form-sub">Informações da despesa</h4>
        <hr />

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" value="@DateTime.Now.ToString("yyyy-MM-dd")" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Vencimento" class="control-label"></label>
                <input asp-for="Vencimento" class="form-control" />
                <span asp-validation-for="Vencimento" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input id="Valor" name="Valor" required data-val-required="The Tipo de Despesa field is required." class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="GrupoId" value="@ViewBag.GrupoId" />

            <div class="form-group">
                <input type="submit" value="Criar Despesa" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="col-md-12 text-center mt-4 custom--back-link">
    <a asp-action="Index" asp-route-grupoId="@ViewBag.GrupoId">Voltar para listagem</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
