@model IEnumerable<QuemPagaQuanto.Models.Despesa>

@{
    ViewData["Title"] = "Despesas";
}

<div class="custom--table-header">
    <h1>Despesas</h1>
    <a asp-action="Create" class="btn btn-success">Adicionar Despesas</a>
</div>

<div class="custom--form">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Grupo.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Vencimento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Valor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Grupo.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Data)
                    </td>
                    <td>
                        @(item.Vencimento != null ? Html.DisplayFor(modelItem => item.Vencimento) : "-")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Valor)
                    </td>
                    <td>
                        @(item.Descricao != null ? Html.DisplayFor(modelItem => item.Descricao) : "-")
                    </td>
                    <td class="custom--table-actions">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Detalhes</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Apagar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


